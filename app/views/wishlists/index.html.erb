<div class="page-header">
  <h1>Listing wishlists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Product</th>
            <th>Category</th>

            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @wishlists.each do |wishlist| %>
        <%= content_tag :tr, id: dom_id(wishlist), class: dom_class(wishlist) do %>
                      <td><%= wishlist.product.title %></td>
                      <td><%= wishlist.product.category.title %></td>
                    <td><%= link_to 'Show', wishlist %></td>
          <td><%= link_to 'Remove from wishlist', wishlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
