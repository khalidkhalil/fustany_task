<%= form_for(@product, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control",:required => true %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :price, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :price, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :category, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%# f.text_field :category, class: "form-control" %>
        <%= f.select :category_id, options_for_select(Category.all.collect {|u| [ u.title, u.id ] }, class: "form-control")%>

      </div>
    
  </div>

  <%= f.label :pic %>
  <%= f.file_field :pic %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
